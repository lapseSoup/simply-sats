{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Simply Sats",
  "version": "0.1.0",
  "identifier": "com.simplysats.wallet",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Simply Sats",
        "width": 400,
        "height": 600,
        "resizable": true,
        "minWidth": 360,
        "minHeight": 500,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "deep-link": {
      "mobile": [],
      "desktop": {
        "schemes": ["simplysats"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png"
    ]
  }
}
